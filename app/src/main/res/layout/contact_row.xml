<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_color"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:id="@+id/llo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Abdur Rahman"
                android:textColor="@color/purple_700"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/row_contact_bldGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Blood"
                android:textColor="@color/purple_700"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>


        <TextView
            android:id="@+id/row_contact_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llo"
            android:layout_marginLeft="14sp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:text="City"
            android:textColor="@color/black"

            android:textSize="14sp"></TextView>

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_contact_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:src="@drawable/call_icon2"

            >

        </ImageButton>

        <ImageButton
            android:id="@+id/smsBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/row_contact_address"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"

            android:layout_toRightOf="@+id/callBtn"
            android:src="@drawable/sms_icon"

            >

        </ImageButton>

        <ImageButton
            android:id="@+id/mailBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/row_contact_address"
            android:layout_margin="2dp"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/smsBtn"
            android:src="@drawable/mail_icon"

            >

        </ImageButton>

        <TextView
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="&#8942;"
            android:textColor="#B0000000"
            android:textSize="25sp">

        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>